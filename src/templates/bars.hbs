<div class="race{{class race}}">
  <p class="type">{{race}}</p>
  {{#each options}}
    {{#if showInOverview}}
      <p class="opt">{{shortName}}{{icon party}}</i></p>
      <div class="progress-bar-indication{{class party}}">
        <span class="meter" style="width: {{percent}}%">
          <p>{{shortnum count}}</p>
        </span>
      </div>
    {{/if}}
  {{/each}}
  <div class="status">
    <p><a href="#/details/{{sheet}}"><i class="icon-expand"></i>Details</a></p>
  </div>
</div>
